{
	"name": "zarf-ui",
	"private": true,
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "concurrently --names ui,api -c gray.bold,yellow 'npm run dev:ui' 'npm run dev:api'",
		"dev:ui": "vite dev",
		"dev:api": "nodemon -e go -x 'cd ../.. && make test-ui-dev-server || exit 1'",
		"build": "vite build",
		"test": "playwright test -x --reporter github,html",
		"test:pre-init": "playwright test -x --reporter github,html --grep @pre-init",
		"test:init": "playwright test -x --reporter github,html --grep @init",
		"test:post-init": "playwright test -x --reporter github,html --grep @post-init",
		"test:connect": "playwright test -x --reporter github,html --grep @connect",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"nodemonConfig": {
		"delay": 5000,
		"watch": [
			"../../src"
		],
		"signal": "SIGKILL",
		"extensions": [
			"go"
		]
	},
	"dependencies": {
		"@defense-unicorns/unicorn-ui": "^0.0.49",
		"@floating-ui/dom": "1.4.2",
		"@fontsource/roboto": "5.0.3",
		"@microsoft/fetch-event-source": "^2.0.1",
		"ansi-to-html": "^0.7.2",
		"material-symbols": "0.8.1",
		"prismjs": "1.29.0",
		"sanitize.css": "13.0.0",
		"yaml": "2.3.1"
	},
	"devDependencies": {
		"@playwright/test": "1.35.1",
		"@sveltejs/adapter-static": "2.0.2",
		"@sveltejs/kit": "1.20.5",
		"@sveltejs/package": "2.1.0",
		"@testing-library/svelte": "4.0.2",
		"@tsconfig/svelte": "5.0.0",
		"@types/prismjs": "1.26.0",
		"@typescript-eslint/eslint-plugin": "5.60.1",
		"@typescript-eslint/parser": "5.60.1",
		"concurrently": "8.2.0",
		"eslint": "8.43.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-svelte": "2.32.0",
		"nodemon": "2.0.22",
		"playwright": "1.35.1",
		"prettier": "3.0.0",
		"prettier-plugin-svelte": "3.0.3",
		"quicktype": "23.0.48",
		"sass": "1.63.6",
		"svelte": "4.0.0",
		"svelte-check": "3.4.4",
		"svelte-preprocess": "5.0.4",
		"tslib": "2.6.0",
		"typescript": "5.1.5",
		"vite": "4.3.9"
	}
}
